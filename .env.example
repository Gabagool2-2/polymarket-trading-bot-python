# Wallet Configuration
PRIVATE_KEY=0x...
WALLET_ADDRESS=0x...

# Network
POLYGON_RPC_URL=https://polygon-rpc.com
CHAIN_ID=137

# Trading Parameters
MIN_PROFIT_THRESHOLD=0.005      # 0.5% minimum profit to execute
MAX_POSITION_SIZE=1000          # Max USD per market
POLL_INTERVAL_SECONDS=2         # How often to scan markets
MIN_LIQUIDITY_USD=5000          # Minimum liquidity to consider market

# Risk Management (5-min / short-term markets)
RISK_PER_TRADE_PCT=0.8          # Max risk per trade % of account (0.5-1.5% typical)
STOP_LOSS_PCT=5.0               # Fixed % stop (e.g. 5 = 5%)
TIME_STOP_SECONDS=120           # Time-based exit (seconds)
POSITION_CAP_PCT=25.0           # Max position as % of account
TAKE_PROFIT_PCT_TO_ONE=55.0     # TP1: % of remaining to 1
TAKE_PROFIT_FIRST_PORTION_PCT=65.0  # % of position at TP1
CONSECUTIVE_LOSSES_PAUSE=5      # Pause after N consecutive losses
CONSECUTIVE_LOSS_PAUSE_MINUTES=30
SESSION_DRAWDOWN_PCT=4.0        # Pause if session drawdown exceeds %
SESSION_PAUSE_MINUTES=60
DAILY_DRAWDOWN_PCT=8.0          # Stop for day if daily drawdown exceeds %
MONTHLY_DRAWDOWN_PCT=20.0       # Halt bot (manual review)
VOLATILITY_SKIP_1MIN_STD=0.028  # Skip if 1-min std > this (empty = disabled)
MIN_SECONDS_UNTIL_RESOLUTION=90 # No entry if < 90s to resolution
MIN_VOLUME_60S_USD=             # Optional: min 60s volume (empty = disabled)
MAX_ZSCORE_3MIN=2.5             # Optional: mean reversion filter (empty = disabled)
MAX_RSI_OVERBOUGHT=80           # Optional: skip if RSI > this (empty = disabled)

# API Endpoints
CLOB_BASE_URL=https://clob.polymarket.com
GAMMA_BASE_URL=https://gamma-api.polymarket.com

# Polymarket L2 API Credentials (generate with scripts in README)
POLY_API_KEY=
POLY_API_SECRET=
POLY_API_PASSPHRASE=

# SOCKS5 Proxy (for geo-restriction bypass)
SOCKS5_PROXY_HOST=rarb-proxy.arkets.com
SOCKS5_PROXY_PORT=1080
SOCKS5_PROXY_USER=rarb
SOCKS5_PROXY_PASS=

# Alerts (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Dashboard
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=

# Mode
DRY_RUN=true                    # Set to false for live trading
